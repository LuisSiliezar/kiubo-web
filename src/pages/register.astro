---
import MainLayoutContainer from "/layouts/MainLayoutContainer.astro";
---

<MainLayoutContainer>
  <div class="h-screen">
    <div class="flex justify-center items-center w-full pt-12">
      <form>
        <div class="bg-white rounded-xl w-screen max-w-sm">
          <div class="space-y-3">
            <h1 class="text-center text-2xl font-semibold text-black">
              Registrarse
            </h1>
            <h4 class="text-center text-normal font-regular text-black">
              Crea una cuenta para poder comenzar a usar nuestro servicio
            </h4>
            <div>
              <label for="email" class="block mb-1 text-black font-semibold"
                >Username</label
              >
              <input
                type="text"
                class="bg-gray-100 px-4 py-2 outline-none rounded-md w-full"
              />
            </div>
            <div>
              <label for="email" class="block mb-1 text-black font-semibold"
                >Email</label
              >
              <input
                type="email"
                class="bg-gray-100 px-4 py-2 outline-none rounded-md w-full"
              />
            </div>
            <div>
              <label for="email" class="block mb-1 text-black font-semibold"
                >Password</label
              >
              <input
                type="text"
                class="bg-gray-100 px-4 py-2 outline-none rounded-md w-full"
              />
            </div>
          </div>
          <button
            class="mt-4 w-full bg-orange-500 text-white py-2 rounded-md text-lg tracking-wide"
            >Register</button
          >
        </div>
      </form>
    </div>
  </div>
</MainLayoutContainer>
