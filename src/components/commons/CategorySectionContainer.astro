---
import { Image } from "astro:assets";

const { category, url } = Astro.props;
---

<div class="block">
  <div class="image-styles">
    <Image
      src={url}
      alt="kiubo logo"
      format="avif"
      width="1500"
      height="1500"
      decoding="async"
      loading="lazy"
      class="object-cover rounded-xl h-full w-full"
    />
  </div>
  <div style="height:50px; padding-top: 6px;">
    <span class="category-info">
      {category}
    </span>
  </div>
</div>

<style>
  .image-styles {
    width: 250px;
  }
  
  .category-info {
    font-size: 0.875rem;
    font-weight: 600;
    color: black;
    text-wrap: wrap;
    line-height: 1.5;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    text-overflow: ellipsis;
  }
</style>
